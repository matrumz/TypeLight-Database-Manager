{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowUnreachableCode": false,
        "strict": true,
        "strictNullChecks": false,
        "outDir": "dist",
        "declaration": true,
        "lib": ["es2015"]
   },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist/**/*"
    ]
}